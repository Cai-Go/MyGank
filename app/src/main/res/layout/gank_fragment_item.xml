<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_92"
        android:layout_margin="@dimen/margin_8">

        <TextView
            android:id="@+id/item_decs_textView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_52"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="2"
            android:text="TextView"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/item_anthor_textView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_4"
            android:gravity="center|left"
            android:text="TextView"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_4"
            android:gravity="center|left"
            android:text="2016-12-31"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_light" />
</LinearLayout>